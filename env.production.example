# Configuration de production pour la boutique en ligne
NODE_ENV=production
PORT=5000

# Base de données MongoDB (remplacez par votre URI Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/boutique-vetements?retryWrites=true&w=majority

# Sécurité
JWT_SECRET=votre_secret_jwt_tres_securise_pour_production_2024
SESSION_SECRET=votre_session_secret_tres_securise_pour_production_2024

# URL du client (votre domaine)
CLIENT_URL=https://votre-domaine.com

# Configuration email (pour les notifications de commandes)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=votre-email@gmail.com
EMAIL_PASS=votre-mot-de-passe-application

# Configuration OAuth Google (optionnel)
GOOGLE_CLIENT_ID=votre_google_client_id
GOOGLE_CLIENT_SECRET=votre_google_client_secret

# Configuration OAuth Facebook (optionnel)
FACEBOOK_APP_ID=votre_facebook_app_id
FACEBOOK_APP_SECRET=votre_facebook_app_secret

# Configuration Remove.bg (pour le traitement d'images)
REMOVE_BG_API_KEY=votre_remove_bg_api_key
